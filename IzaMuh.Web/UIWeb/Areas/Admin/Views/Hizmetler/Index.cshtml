
<div class="container">
    <a href="/Admin/Hizmetler/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Hizmet Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Hizmet Fotoğrafı</td>
                <td>Hizmet Adı</td>
                <td>Hizmet Detayı</td>

            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td style="text-align:center"><img src="/images/@item.Images" width="50" /></td>
                    <td>@item.Name</td>
                    <td>@item.Details</td>

                    <td>
                        <a href="/Admin/Hizmetler/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/Admin/Hizmetler/Delete/@item.Id" class="btn btn-success">Sil</a>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>