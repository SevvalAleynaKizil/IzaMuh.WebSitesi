<div class="container">
    <a href="/Admin/Hakkinda/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Hakkında Bilgisi Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Hakkında Yazısı</td>
                
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Details</td>
                    
                    <td>
                        <a href="/Admin/Hakkinda/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/Admin/Hakkinda/Delete/@item.Id" class="btn btn-success">Sil</a>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>