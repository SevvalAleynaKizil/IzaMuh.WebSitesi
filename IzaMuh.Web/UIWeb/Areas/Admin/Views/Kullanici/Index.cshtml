<div class="container">
    <a href="/Admin/Kullanici/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Kullanıcı Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Kullanıcı Adı</td>
                <td>Şifre</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>@item.Password</td>
                    <td>
                        <a href="/Admin/Kullanici/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/Admin/Kullanici/Delete/@item.Id" class="btn btn-success">Sil</a>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>