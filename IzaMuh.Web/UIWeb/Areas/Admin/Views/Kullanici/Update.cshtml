<div class="container">

    <a href="/Admin/Kullanici" class="btn btn-primary" style="margin-bottom:10px;">Geri</a>

    <form action="/Admin/Kullanici/Update/@Model.Id" enctype="multipart/form-data" method="post">
        <input type="text" class="form-control" name="Username" value="@Model.Username" style="margin-bottom:10px;" />
        <input type="password" class="form-control" name="Password" value="@Model.Password" style="margin-bottom:10px;" />
        <button type="submit" class="form-control btn btn-primary">Güncelle</button>
    </form>

</div>
@if (ViewBag.Message != null)
{
            <div class="alert alert-success" style="margin-top:15px;">@ViewBag.Message</div>
}
@if (ViewBag.Error != null)
{
            <div class="alert alert-danger" style="margin-top:15px;">@ViewBag.Error</div>
}