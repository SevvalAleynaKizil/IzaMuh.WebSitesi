<div class="container">

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>ServisAdı</td>
                <td>Yorumu Yapan</td>
                <td>Yorum</td>
                <td>Durumu</td>
                <td>Yanit</td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ServiceName</td>
                    <td>@item.Name</td>
                    <td>@item.Comment</td>
                    <td>@(item.Status == true ? "Aktif" : "Pasif")</td>
                    <td>@item.Response</td>
                    <td>
                        <a href="/Admin/Yorumlar/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                    </td>
                        <td>
                        <a href="/Admin/Yorumlar/Response/@item.Id" class="btn btn-primary">Yanıtla</a>
                        <a href="/Admin/Yorumlar/Delete/@item.Id" class="btn btn-success">Sil</a>
                        </td>
                </tr>

            }
        </tbody>
    </table>
</div>