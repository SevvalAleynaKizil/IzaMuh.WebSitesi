@{
    Layout = null;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<div class="container" style="margin-top:50px;">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="/Admin/Giris" method="post">
                    <input type="text" name="Username" class="form-control" style="margin-bottom:15px;" placeholder="Kullanıcı Adı:" />
                    <input type="password" name="Password" class="form-control" style="margin-bottom:15px;" placeholder="Şifreniz :" />
                    <button type="submit" class="btn btn-primary form-control">Giriş Yap</button>
                </form>
                <pre>@ViewBag.Error</pre>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

