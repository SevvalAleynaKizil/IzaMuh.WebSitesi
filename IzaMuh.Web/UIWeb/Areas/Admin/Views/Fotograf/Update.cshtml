<div class="container">

    <a href="/Admin/Fotograf" class="btn btn-primary" style="margin-bottom:10px;">Geri</a>

    <form action="/Admin/Fotograf/Update/@Model.Id" enctype="multipart/form-data" method="post">
        <img src="/images/@Model.Name" width="200px" style="margin-bottom:10px;" />
        <input name="Name" value="@Model.Name" hidden />
        <input type="file" name="file" class="form-control" style="margin-bottom:10px;"/>
        
              <button type="submit" class="form-control btn btn-primary">Güncelle</button>
    </form>

</div>
@if (ViewBag.Message != null)
{
        <div class="alert alert-success" style="margin-top:15px;">@ViewBag.Message</div>
}
@if (ViewBag.Error != null)
{
        <div class="alert alert-danger" style="margin-top:15px;">@ViewBag.Error</div>
}