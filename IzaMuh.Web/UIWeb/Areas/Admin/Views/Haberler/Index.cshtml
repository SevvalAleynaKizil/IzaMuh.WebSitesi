<div class="container">
    <a href="/Admin/Haberler/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Haber Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Haber Adı</td>
                <td>Haber Detayı</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Newsname</td>
                    <td>@item.Newsdetail</td>
                    <td>
                        <a href="/Admin/Haberler/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/Admin/Haberler/Delete/@item.Id" class="btn btn-success">Sil</a>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>